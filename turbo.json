{
    "$schema": "https://turbo.build/schema.json",
    "tasks": {
        "//#format-and-lint": {},
        "//#format-and-lint:fix": {
            "cache": false
        },
        "test": {
            "dependsOn": [
                "^build"
            ],
            "inputs": [
                "$TURBO_DEFAULT$",
                ".env*"
            ]
        },
        "build": {
            "dependsOn": [
                "^build"
            ],
            "inputs": [
                "$TURBO_DEFAULT$",
                ".env*"
            ],
            "outputs": [
                "**/dist"
            ]
        },
        "dev": {
            "cache": false,
            "persistent": true
        }
    }
}